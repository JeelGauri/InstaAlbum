@model IEnumerable<InstaAlbum.Models.tblPortfolio>
@{
    ViewBag.Title = "Protfolio";
    Layout = "~/Views/Shared/_userLayout.cshtml";
}
<section id="blog-list-section" class="blog-list-grid">
    <div class="container-fluid">
        <div class="row">
            <div class="isotope-wrap">
                <div class="isotope col-3 gutter-2">
                    <div class="isotope-items-wrap">
                        <div class="grid-sizer"></div>
                        @foreach (var item in Model)
                        {
                            <div class="isotope-item">
                                <article class="blog-list-item">
                                    <a href="#" class="bl-item-image"><img src="~/PortfolioImages/@item.Image" alt="image" style="height:500px;width:500px;"></a>
                                    <div class="bl-item-info">
                                        <a href="../UserHome/SingleProtfolio/@item.PortfolioID" class="bl-item-title"><h2>@item.PortfolioName</h2></a>
                                        <div class="bl-item-meta">
                                            <i class="fa fa-clock-o"></i>
                                            <span class="published">@item.CreatedDate</span>
                                        </div>
                                        <div class="bl-item-desc">
                                            @item.SmallDescription
                                        </div>
                                        <a href="../UserHome/SingleProtfolio/@item.PortfolioID" class="bl-item-read-more" title="Read More"><span></span></a>
                                    </div>
                                </article>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

