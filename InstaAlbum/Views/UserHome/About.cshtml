@model IEnumerable<InstaAlbum.Models.tblAboutUs>
@{
    ViewBag.Title = "About";
    Layout = "~/Views/Shared/_userLayout.cshtml";
}

<section id="about-me-section">

    <!-- ======================
    ///// Begin split box /////
    based on: http://www.minimit.com/articles/solutions-tutorials/bootstrap-3-responsive-columns-of-same-height
    ======================= -->
    
    <div class="split-box what-i-do">
        <div class="container-fluid">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="row-lg-height">

                        <!-- Column -->
                        <div class="col-lg-6 col-lg-push-6 col-lg-height split-box-image no-padding bg-image" style="background-image: url(/AboutUsImages/@item.Image); background-position: 50% 50%;">

                            <div class="sbi-height padding-height-100"></div>

                        </div> <!-- /.col -->
                        <!-- Column -->
                        <div class="col-lg-6 col-lg-pull-6 col-lg-height col-lg-middle no-padding">


                            <div class="split-box-content shifted-right">
                                <h1 class="about-me-title">About Us</h1>
                                <div class="about-me-sub">A little bit of Our work</div>

                                <div class="about-me-text">
                                    <p>@item.Description</p>
                                </div>
                                @*<a href="gallery-list-categories.html" class="btn btn-primary margin-top-20">View My Work</a>*@
                                <a href="@Url.Action("Contact", "UserHome")" class="btn btn-primary margin-top-20">Contact Us</a>
                            </div>
                            <!-- End split box content -->

                        </div> <!-- /.col -->

                    </div> <!-- /.row-height -->
                }
                </div> <!-- /.row -->
        </div> <!-- /.container -->
    </div>
    
    <!-- End split box -->

</section>

