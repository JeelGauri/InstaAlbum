@model IEnumerable<InstaAlbum.Models.tblQuery>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript">
    function ConfirmationDialog(CustomerID) {
        if (confirm("Are you sure to delete?"))
            fnDeleteRecord(CustomerID);
        else
            return false;
    }
</script>
<script>
    function fnDeleteRecord(CustomerID) {
        $.ajax({
            async: true,
            type: 'POST',
            dataType: 'JSON',
            contentType: 'application/json; charset=utf-8',
            data: "{'id':'" + CustomerID + "'}",
            url: '/Queries/Delete',
            success: function (response) {
                if (response.success === true) {
                    toastr.success(
                      response.message,
                      'Record is deleted',
                      {
                        timeOut: 1000,
                        fadeOut: 1000,
                        onHidden: function () {
                            window.location.reload();
                          }
                      }
                    );
                }
                else {
                    toastr.info(response.message, 'Record is not deleted',  { timeOut: 3000 });
                }
            },
            error: function () {
                toastr.error('Error occur', 'Error occur while deleting record.', { timeOut: 3000 });
            }

        });
    }
</script>

<div class="bg-dark bg-dots m-b-30">
    <div class="container">
        <div class="row p-b-60 p-t-60">

            <div class="col-lg-8 text-center mx-auto text-white p-b-30">
                <div class="m-b-10">
                    <div class="avatar avatar-lg ">
                        <h1 class="mdi mdi-account-group"></h1>
                    </div>
                </div>
                <h3>Queries</h3>
            </div>
        </div>
    </div>
</div>

<div class="container col-12 pull-up">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div>
                        <h3>Query List</h3>
                    </div>
                    <div class="table-responsive">
                        <table id="example-height" class="table" style="width:100%">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Subject</th>
                                    <th>Message</th>
                                    <th>Created Date</th>
                                    <th>Delete</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>
                                        @item.CustomerName
                                    </td>
                                    <td>
                                        @item.CustomerEmail
                                    </td>
                                    <td>
                                        @item.Subject
                                    </td>
                                    <td width="430px">
                                        @item.Message
                                    </td>
                                    <td>
                                        @item.CreatedDate
                                    </td>
                                    <td>
                                        <input type="submit" class="btn btn-sm m-b-15 ml-2 mr-2 btn-danger" onclick="return ConfirmationDialog(@item.QueryID)" value="Delete" />
                                    </td>

                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
