
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_userLayout.cshtml";
}
    <section id="contact-section" class="contact-simple" style="background-image: url(../userassets/img/misc/misc-4.jpg); background-position: 50% 50%;">
        <div class="cover"></div>
        <form id="contact-form">
            <div class="contact-info-wrap">
                <div class="contact-info text-center">
                    <h1 class="contact-form-title font-alter-1">Login</h1>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                <input type="email" class="form-control" name="email" placeholder="Enter Email" required>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                <input type="password" class="form-control" name="password" placeholder="Enter password" required>
                            </div>
                        </div>
                    </div>
                    <div class="small text-gray"><em>* All fields are required!</em></div>
                </div>
                <div class="row">
                    <div class="col-lg-6">
                        <button type="submit" class="btn btn-primary btn-lg btn-block margin-top-40">Login</button>
                    </div>
                    <div class="col-lg-6">
                        <button type="submit" class="btn btn-primary btn-lg btn-block margin-top-40">Cancle</button>
                    </div>
                </div>
            </div>
        </form>
    </section>